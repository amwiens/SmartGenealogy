<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SmartGenealogy.Controls.BrandingLandscape"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SmartGenealogy.Controls"
    xmlns:localization="clr-namespace:SmartGenealogy.Resources.Translations">

    <HorizontalStackLayout HorizontalOptions="Start" Spacing="15">

        <Border
            Padding="0"
            BackgroundColor="{DynamicResource White}"
            HeightRequest="50"
            HorizontalOptions="Start"
            Stroke="{DynamicResource Primary10Color}"
            StrokeShape="{RoundRectangle CornerRadius=12}"
            StrokeThickness="2"
            WidthRequest="50">
            <controls:RoundedCornerImage
                Background="{DynamicResource White}"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="Center"
                Source="logo.png"
                Stroke="Transparent"
                VerticalOptions="Center"
                WidthRequest="40" />
        </Border>

        <VerticalStackLayout VerticalOptions="Center">
            <Label
                HorizontalTextAlignment="Start"
                Style="{StaticResource Title2}"
                Text="Maui Kit"
                TextColor="{DynamicResource PrimaryColor}"
                VerticalOptions="Center" />

            <Label
                HorizontalTextAlignment="Start"
                Style="{StaticResource Footnote}"
                Text="App Design Studio"
                VerticalOptions="Center" />
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>