<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SmartGenealogy.Controls.ButtonAppleLogin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonticons="clr-namespace:SmartGenealogy.Resources.FontIcons">
    <Border
        Padding="20,10"
        Background="{DynamicResource MainWrapperBackgroundColor}"
        Stroke="{DynamicResource DefaultBorder}"
        StrokeShape="{RoundRectangle CornerRadius='8'}"
        StrokeThickness="1">
        <Image HeightRequest="22">
            <Image.Source>
                <FontImageSource
                    FontFamily="FaBrands"
                    Glyph="{x:Static fonticons:FaBrands.Apple}"
                    Color="{DynamicResource BaseIconColor}" />
            </Image.Source>
        </Image>

        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnButtonTapped" />
        </Border.GestureRecognizers>
    </Border>
</ContentView>