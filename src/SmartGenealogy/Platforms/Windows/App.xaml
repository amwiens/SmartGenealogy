<maui:MauiWinUIApplication
    x:Class="SmartGenealogy.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartGenealogy.WinUI"
    xmlns:maui="using:Microsoft.Maui">
    <maui:MauiWinUIApplication.Resources>
        <SolidColorBrush x:Key="WindowCaptionBackground">#BAD5F8</SolidColorBrush>
        <Color x:Key="WindowCaptionColor">#1A73E8</Color>

        <DataTemplate x:Key="MauiAppTitleBarTemplate">
            <Grid>
                <Border
                    Margin="0,0,0,0"
                    VerticalAlignment="Stretch"
                    Background="{StaticResource WindowCaptionBackground}">
                    <TextBlock
                        x:Name="TitleBarTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="{StaticResource WindowCaptionColor}"
                        Text="Smart Genealogy" />
                </Border>
            </Grid>
        </DataTemplate>

        <Thickness x:Key="TextControlBorderThemeThickness">0</Thickness>
        <Thickness x:Key="TextControlBorderThemeThicknessFocused">0</Thickness>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>