<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGenealogy.Views.Base.BasePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:SmartGenealogy.Resources.Translations"
    x:Name="Root"
    NavigationPage.HasBackButton="{OnPlatform Default='True',
                                              WinUI='False'}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="{OnPlatform Default='True', WinUI='False'}" />
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="Auto, *">
        <Grid
            Padding="15,5"
            BackgroundColor="{DynamicResource BasePageColor}"
            ColumnDefinitions="Auto,*"
            ColumnSpacing="15"
            IsVisible="{OnPlatform WinUI='True',
                                   Default='False'}">
            <HorizontalStackLayout x:Name="backNavigation" Spacing="15">
                <Label Style="{StaticResource IconBackLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="GoBack_Tapped" />
                    </Label.GestureRecognizers>
                </Label>

                <Label
                    Style="{StaticResource SubTitle}"
                    Text="Back"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Label
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Style="{StaticResource Title2}"
                Text="{Binding BaseTitle, Source={x:Reference Root}}"
                TextColor="{Binding BaseTitleColor, Source={x:Reference Root}}"
                VerticalOptions="Center" />
        </Grid>

        <!--  Grid to contain Page Content  -->
        <Grid x:Name="PageContentGrid" Grid.Row="1" />
    </Grid>
</ContentPage>