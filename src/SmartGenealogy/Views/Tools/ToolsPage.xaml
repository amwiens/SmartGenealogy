<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGenealogy.Views.Tools.ToolsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:SmartGenealogy.Core.ViewModels.Tools;assembly=SmartGenealogy.Core"
    x:Name="toolsPage"
    x:DataType="viewModels:ToolsPageViewModel">

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Start"
            Text="Database Tools"
            VerticalOptions="Center" />
        <Button Command="{Binding CompactDatabaseCommand}" Text="Compact Database" />
        <Button Command="{Binding ReindexDatabaseCommand}" Text="Rebuild indexes in Database" />
        <Button Command="{Binding DatabaseIntegrityCheckCommand}" Text="Database Integrity check" />

        <Label
            HorizontalOptions="Start"
            Text="Fact Types"
            VerticalOptions="Center" />
        <Button Command="{Binding OpenFactTypesPageCommand}" Text="Manage fact types" />
    </VerticalStackLayout>
</ContentPage>