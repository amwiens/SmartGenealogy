<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGenealogy.Views.Main.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:SmartGenealogy.Core.ViewModels.Main"
    x:DataType="viewModels:MainPageViewModel">

    <VerticalStackLayout>
        <Button Command="{Binding CreateDatabaseCommand}" Text="Create Database" />
        <Button Command="{Binding OpenDatabaseCommand}" Text="Open Database" />
        <Button Command="{Binding CloseDatabaseCommand}" Text="Close Database" />
    </VerticalStackLayout>
</ContentPage>