<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGenealogy.Views.Main.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SmartGenealogy.Core.ViewModels.Main;assembly=SmartGenealogy.Core"
    x:Name="mainPage"
    x:DataType="viewModels:MainPageViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Source={x:Reference mainPage}, Path=BindingContext}"
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Button Command="{Binding CreateDatabaseCommand}" Text="Create Database" />
        <Button Command="{Binding OpenDatabaseCommand}" Text="Open Database" />
        <Button
            Command="{Binding CloseDatabaseCommand}"
            IsVisible="{Binding DatabaseOpen}"
            Text="Close Database" />
    </VerticalStackLayout>
</ContentPage>