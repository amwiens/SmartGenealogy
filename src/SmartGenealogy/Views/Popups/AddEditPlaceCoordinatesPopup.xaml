<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SmartGenealogy.Views.Popups.AddEditPlaceCoordinatesPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SmartGenealogy.Core.ViewModels.Popups;assembly=SmartGenealogy.Core"
    x:Name="addEditPlaceCoordinatesPopup"
    x:DataType="viewModels:AddEditPlaceCoordinatesPopupViewModel"
    Background="{DynamicResource BasePageColor}">

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Start"
            Text="Place Coordinates"
            VerticalOptions="Center" />

        <VerticalStackLayout
            Grid.Column="0"
            Padding="20"
            MinimumWidthRequest="380">
            <Label
                HorizontalOptions="Center"
                Text="Latitude"
                VerticalOptions="Center" />

            <Entry Text="{Binding Latitude}">
                <Entry.Behaviors>
                    <toolkit:EventToCommandBehavior
                        BindingContext="{Binding Source={x:Reference addEditPlaceCoordinatesPopup}, Path=BindingContext}"
                        Command="{Binding LatitudeChangedCommand}"
                        EventName="TextChanged" />
                </Entry.Behaviors>
            </Entry>
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Column="0"
            Padding="20"
            MinimumWidthRequest="380">
            <Label
                HorizontalOptions="Center"
                Text="Longitude"
                VerticalOptions="Center" />

            <Entry Text="{Binding Longitude}" />
        </VerticalStackLayout>

        <HorizontalStackLayout HorizontalOptions="End">
            <Button
                Command="{Binding SaveCommand}"
                Style="{DynamicResource PrimaryButtonStyle}"
                Text="Save" />
            <Button
                Command="{Binding CancelCommand}"
                Style="{DynamicResource PrimaryButtonStyle}"
                Text="Cancel" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>