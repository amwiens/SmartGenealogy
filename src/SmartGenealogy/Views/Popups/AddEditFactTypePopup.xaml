<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SmartGenealogy.Views.Popups.AddEditFactTypePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SmartGenealogy.Core.ViewModels.Popups;assembly=SmartGenealogy.Core"
    x:DataType="viewModels:AddEditFactTypePopupViewModel"
    Background="{DynamicResource BasePageColor}">

    <VerticalStackLayout>
        <Label Text="Fact Type" />

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*,Auto">

            <VerticalStackLayout
                Grid.Column="0"
                Padding="20"
                MinimumWidthRequest="380">
                <Label
                    HorizontalOptions="Center"
                    Text="Name"
                    VerticalOptions="Center" />

                <Entry Text="{Binding Name}" />

                <Label
                    HorizontalOptions="Center"
                    Text="Abbreviation"
                    VerticalOptions="Center" />

                <Entry Text="{Binding Abbreviation}" />

                <Label
                    HorizontalOptions="Center"
                    Text="Gedcom Tag"
                    VerticalOptions="Center" />

                <Entry Text="{Binding GedcomTag}" />

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding UseValue}" />

                    <Label
                        HorizontalOptions="Center"
                        Text="Use value"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding UseDate}" />

                    <Label
                        HorizontalOptions="Center"
                        Text="Use date"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding UsePlace}" />

                    <Label
                        HorizontalOptions="Center"
                        Text="Use place"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="1"
                Padding="20"
                MinimumWidthRequest="380">
                <Label
                    HorizontalOptions="Center"
                    Text="Sentence"
                    VerticalOptions="Center" />

                <Editor HeightRequest="200" Text="{Binding Sentence}" />
            </VerticalStackLayout>
        </Grid>

        <HorizontalStackLayout HorizontalOptions="End">
            <Button
                Command="{Binding SaveCommand}"
                Style="{DynamicResource PrimaryButtonStyle}"
                Text="Save" />
            <Button
                Command="{Binding CancelCommand}"
                Style="{DynamicResource PrimaryButtonStyle}"
                Text="Cancel" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>